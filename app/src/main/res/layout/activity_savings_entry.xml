<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_dialog_bg">

    <!-- Inner LinearLayout with margin at the top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:padding="16dp">

        <!-- Instructional Text -->
        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your initial savings balance."
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <!-- Label for MYR Currency -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MYR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Text Box for Balance Input -->
        <EditText
            android:id="@+id/et_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter balance"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Balance"
            android:padding="12dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</FrameLayout>
