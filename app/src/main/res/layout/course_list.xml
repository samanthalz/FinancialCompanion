<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/dark_green"
    >

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/course_img"
        android:background="@color/purple_grey"
        />

    <TextView
        android:id="@+id/course_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@id/course_img"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/course_name"
        android:layout_marginStart="105dp"
        android:layout_marginBottom="-20dp"
        android:id="@+id/user_icon"
        android:src="@drawable/mini_user" />
    
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/course_author"
        android:layout_toEndOf="@id/user_icon"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/quiz_status"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:layout_toEndOf="@id/course_img"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fav_button"
        android:src="@drawable/orange_star"
        android:layout_toEndOf="@id/course_name"
        android:layout_marginTop="20dp"
        />
    
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/read_duration"
        android:layout_toEndOf="@id/quiz_status"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:textColor="@color/orange"
        android:text="@string/minute_read"
        android:textSize="10sp"

        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/course_img"
        android:layout_marginTop="10dp"/>




</RelativeLayout>