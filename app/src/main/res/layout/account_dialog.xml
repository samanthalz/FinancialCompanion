<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:background="@drawable/account_dialog_bg"
    android:padding="12dp">

    <!-- Savings item -->
    <LinearLayout
        android:id="@+id/savings_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/image_icon_savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finance_bank_piggy_business_money_icon"
            android:layout_marginEnd="8dp"
            android:contentDescription="Savings Icon"/>

        <TextView
            android:id="@+id/text_label_savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Savings"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Container for assets to be added dynamically -->
    <LinearLayout
        android:id="@+id/assets_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"/>

    <!-- "Add Asset" button -->
    <LinearLayout
        android:id="@+id/add_asset_button"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_24_grey"
            android:layout_marginEnd="8dp"
            android:contentDescription="Add Asset Icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Asset"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
