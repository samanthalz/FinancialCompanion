<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ChangePasswordFragment">

    <!-- Back Button -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <!-- Toolbar for Back Button -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Change Password"
            android:layout_marginTop="36dp"
            android:layout_gravity="start"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="8dp" />

        <!-- Informative Text -->
        <TextView
            android:id="@+id/informative_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/change_pass_instruction"
            android:textSize="16sp"
            android:paddingVertical="16dp" />

        <!-- Email Label -->
        <TextView
            android:id="@+id/email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_email"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingVertical="10dp" />

        <!-- Email Input Field -->
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/green_border"
            android:layout_marginBottom="30dp" />

        <!-- You can add a button to submit the email below -->
        <Button
            android:id="@+id/send_code_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_code"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>